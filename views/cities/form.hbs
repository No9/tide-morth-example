  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{city.name}}">
  </div>

  <div>
    <label for="country">Country</label>
    <textarea id="country" name="country">{{ city.country }}</textarea>
  </div>

  <input type="submit" value="Save"/>
</form>

